@{
}
@model IEnumerable<Category>

<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                   
                 
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="30%">
                            @category.Title
                        </td>
                        <td width="40%">
                            @category.Description
                        </td>
                       
                      
                    </tr>

                }
            </tbody>
        </table>


    }
    else
    {
        <p>Không tồn tại thể loại trong database</p>
    }


</div>
